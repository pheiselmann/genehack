	<title></title>
</head>
<body>
	<p>Hello world!</p>

	<div class="login-page">
    <form role="form" accept-charset="UTF-8" name="js-login-submit-form" method="POST">
    	<fieldset>
    		<legend>Log In</legend>
    		<label for="js-username">username</label>
    		<input type="text" class="js-username" name="js-username" placeholder="genemachine"/>
    		<label for="js-password">password</label>
    		<input type="password" class="js-password" name="js-password" placeholder="1234passw0rd"/>
    		<button type="submit">Log In</button>
    	</fieldset>
    </form>
    </div>

    <div class="login-error" style="display: none;">
    <p class="error-msg">Incorrect username and password combination.</p>
    <form role="form" accept-charset="UTF-8" name="js-login-submit-form-error" method="POST">
    	<fieldset>
    		<legend>Log In</legend>
    		<label for="js-username">username</label>
    		<input type="text" class="js-username" name="js-username" placeholder="genemachine"/>
    		<label for="js-password">password</label>
    		<input type="password" class="js-password" name="js-password" placeholder="1234passw0rd"/>
    		<button type="submit">Log In</button>
    	</fieldset>
    </form>
    </div>


	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
	<script src="/app.js"></script>
